@model IEnumerable<WebBook.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <a href="#"><img class="card-img-top img-mai" src="@item.ImageCover" alt=""></a>
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="#">@item.Title</a>
                    </h4>
                    <h5>$24.99</h5>
                    <p class="card-text">@item.Author</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                </div>
            </div>
        </div>
    }
</div>